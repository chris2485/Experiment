@model IEnumerable<Experiment.Models.course_information>

@if(Model.Count() > 0){
    List<SelectListItem> courseList = new List<SelectListItem>();
    foreach (var i in Model)
    {
        courseList.Add(new SelectListItem() { Text = i.course_name, Value = i.course_id.ToString() });
    }
    <text>Course: @Html.DropDownList("apply.course_id", courseList, new { id = "apply_course_id", @class = "textbox", style = "width: 88.9%" })</text>
}
else{
    <text>No Courses.</text>
}