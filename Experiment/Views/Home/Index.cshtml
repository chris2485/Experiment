    <div id="apply_icon">
        <span class="apply_b">
            <span class="arrow"><span></span>APPLY NOW!</span>
            <img src="@Url.Content("~/Content/icons/owl.png")" />
        </span>
    </div>

    <div id="lx_apply" @if(Model.panel == 3){ <text>style="display: initial"</text> }>
        <div class="panel">
            <div style="padding: 0px 20px">
                <h1>Application Form</h1>
            </div>
            @using(Html.BeginForm("Apply", "Index")){
                <h2 style="margin-top: 10px">Academic Information</h2>
                <p>
                    @if(Model.branchList.Count > 0){
                        List<SelectListItem> branchList = new List<SelectListItem>();
                        foreach (var i in Model.branchList)
                        {
                            branchList.Add(new SelectListItem() { Text = i.branch + " - " + i.college, Value = i.branch_id.ToString() });
                        }
                        <text>Branch: @Html.DropDownListFor(x => x.apply.branch_id, branchList, new { id = "branch_id", @class = "textbox", style = "width: 88.9%" })</text>
                    }
                    else{
                        <text>No Branch.</text>
                    }
                </p>
                <p id="course_output">
                    @if(Model.courseList.Count > 0){
                        List<SelectListItem> courseList = new List<SelectListItem>();
                        foreach (var i in Model.courseList)
                        {
                            courseList.Add(new SelectListItem() { Text = i.course_name, Value = i.course_id.ToString() });
                        }
                        <text>Course: @Html.DropDownListFor(x => x.apply.course_id, courseList, new { @class = "textbox", style = "width: 88.9%" })</text>
                    }
                    else{
                        <text>No Courses.</text>
                    }
                </p>
                <h2 style="margin-top: 10px">Personal Background</h2>
                <p>
                    @Html.RadioButtonFor(x => x.apply.gender, "Mr.", new { @checked = "true" }) Mr.
                    @Html.RadioButtonFor(x => x.apply.gender, "Ms.") Ms.
                    @Html.RadioButtonFor(x => x.apply.gender, "Mrs.") Mrs.
                </p>
                <p>
                    @Html.TextBoxFor(x => x.apply.firstname, new { @class = "textbox", placeholder = "Firstname", maxLength = "45", style = "width: 30%" })
                    @Html.TextBoxFor(x => x.apply.middlename, new { @class = "textbox", placeholder = "Middlename", maxLength = "45", style = "width: 25.3%" })
                    @Html.TextBoxFor(x => x.apply.lastname, new { @class = "textbox", placeholder = "Lastname", maxLength = "45", style = "width: 30%" })
                </p>
                <p>
                    @Html.TextBoxFor(x => x.apply.telephone, new { @class = "textbox", placeholder = "Telephone", maxLength = "15", style = "width: 229px" })
                    @Html.TextBoxFor(x => x.apply.mobile, new { @class = "textbox", placeholder = "Mobile", maxLength = "15", style = "width: 229px" })
                </p>
                <p>
                    @Html.TextBoxFor(x => x.apply.email, new { type = "email", @class = "textbox", placeholder = "Email", maxLength = "45", style = "width: 483px" })
                </p>
                <p>
                    @Html.TextBoxFor(x => x.apply.address, new { @class = "textbox", placeholder = "Home Address", maxLength = "200", style = "width: 483px" })
                </p>
                <h2 style="margin-top: 10px">Educational Background</h2>
                <p>
                    @Html.TextBoxFor(x => x.apply.hea, new { @class = "textbox", placeholder = "Highest Educational Attainment", maxLength = "200", style = "width: 483px" })
                </p>
                <p>
                    @Html.TextBoxFor(x => x.apply.lsa, new { @class = "textbox", placeholder = "Last School Attended", maxLength = "100", style = "width: 483px" })
